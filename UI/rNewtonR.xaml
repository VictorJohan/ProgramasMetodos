<Window x:Class="ProgramasMetodos.UI.rNewtonR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramasMetodos.UI"
        mc:Ignorable="d"
        Title="Newton Raphson" Height="200" Width="405" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="Valor inicial aproximado de la raiz" FontSize="11" FontWeight="Bold"/>
            <TextBox Name="ValorInicialTextBox" Height="20" Margin="5,0"/>

            <Label Content="Numero de decimales exactos de la aproximacion" FontSize="11" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="DecimalesTextBox" Height="20" Width="296" Margin="5,0"/>
                <Button Name="CalcularButton" Height="20" Width="60" Content="Calcular" Click="Calcular_Click"/>
            </StackPanel>

            <TextBlock Name="ResultadoTextBlock" Height="40" Margin="5,15" Background="LightBlue"/>

        </StackPanel>
    </Grid>
</Window>
